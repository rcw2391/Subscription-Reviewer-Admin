<%- include('./includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css">
</head>

<%- include('./includes/nav.ejs') %>

<h1>Delete <%= category.name %></h1>

<% if(category.subscriptions.length !== 0) { %>
    <form action="/category/delete/<%= category._id %>" method="POST">
        <div class="form-control small-form">
            <label for="category"><span>Migrate:</span></label>
            <select name="category" <%= categories.length > 10 ? 'size="7"' : '' %>>
                <% for(let c of categories) { %>
                    <% if(c._id.toString() !== category._id.toString()) { %>
                        <option value="<%= c._id %>"><%= c.name %></option>
                    <% } %>
                <% } %>
            </select>
            <button type="submit" class="btn redBtn">Delete</button>
        </div>
    </form>
<% } %>

